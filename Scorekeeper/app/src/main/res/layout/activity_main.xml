<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/decreaseTeam1"
            style="@style/decrease_button_style"
            android:onClick="decreaseScore" />

        <ImageButton
            android:id="@+id/increaseTeam1"
            style="@style/increase_button_style"
            android:onClick="increaseScore" />

        <TextView
            style="@style/team_label_style"
            android:text="@string/team_1" />

        <TextView
            android:id="@+id/score_1"
            style="@style/score_label_style"
            android:text="@string/score_0" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/decreaseTeam2"
            style="@style/decrease_button_style"
            android:onClick="decreaseScore" />

        <ImageButton
            android:id="@+id/increaseTeam2"
            style="@style/increase_button_style"
            android:onClick="increaseScore" />

        <TextView
            style="@style/team_label_style"
            android:text="@string/team_2" />

        <TextView
            android:id="@+id/score_2"
            style="@style/score_label_style"
            android:text="@string/score_0" />
    </RelativeLayout>
</LinearLayout>